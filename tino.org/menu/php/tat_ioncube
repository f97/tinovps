#!/bin/bash 
##TinoVPS Script##

echo ""
echo "====================================================================================="
echo "Menu Board > PHP  > Turn off ioncube php"
echo "/-------------------------/"
echo "- Turn off ioncube php"
echo "/-----------------------------------------------------------------------------------/"
echo ""


cd /opt/php/


prompt="Please select the version of PHP you want turn off ioncube php:"
options=( $(ls -d *) )
PS3="$prompt "

select opt in "${options[@]}" "ThoÃ¡t." ; do
    if (( REPLY == 1 + ${#options[@]} )) ; then
        /etc/quicklemp/menu/php_

    elif (( REPLY > 0 && REPLY <= ${#options[@]} )) ; then
		echo ""
        break

    else
        echo "Wrong option, please try again: "
    fi
done

php_dir=$opt
php_ver=${opt:3}

echo ""

sed -i '/zend_extension=ioncube_loader_/d' /opt/php/$php_dir/lib/php.ini &>/dev/null

service php-fpm-$php_ver restart &>/dev/null

echo ""
echo "Congratulations,  Your has been successfully turn off ioncube  on $php_ver  the system.!"
echo ""
/etc/quicklemp/menu/php_
