echo "-------------------------------------------------------------------------"
echo ""
read -p "Nhap user name ban muon thay doi pass(VD: root): " username
if ! [ "$username" == '' ]; then
check_user=$(cat /etc/passwd | grep $username)

if ! [ "$check_user" == '' ]; then  
	passwd $username
/etc/quicklemp/menu/ssh_	
else
echo "user khong ton tai tren he thong"
/etc/quicklemp/menu/ssh_
fi
else
	echo "ban nhap user sai"
/etc/quicklemp/menu/ssh_
fi

/etc/quicklemp/menu/ssh_